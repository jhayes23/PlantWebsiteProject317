    <script defer src="/public/js/frontendjs.js"></script>
</head>
<body>
<div class="container">
{{> banner}}
{{#if (emptyObject messages)}}
    {{> flashmessage}}
{{/if}}
{{> nav }}
{{{body}}}
{{> footer}}
{{#if logged}}
    <script>
        let ele = document.getElementById('logout-button');
        if (ele) {
            ele.onclick = (event) => {
                fetch('/users/logout', {
                    method: "POST"
                })
                        .then((data) => {
                            location.replace('/');
                        })
            }
        }
    </script>
{{/if}}
</div>
</body>
</html>
